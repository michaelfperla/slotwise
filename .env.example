# SlotWise Development Environment Configuration

# Node Environment
NODE_ENV=development

# Database URLs
DATABASE_URL_AUTH="postgresql://slotwise_auth_user:slotwise_auth_password@localhost:5432/slotwise_auth?schema=public"
DATABASE_URL_BUSINESS="postgresql://slotwise_business_user:slotwise_business_password@localhost:5432/slotwise_business?schema=public"
DATABASE_URL_SCHEDULING="postgresql://slotwise_scheduling_user:slotwise_scheduling_password@localhost:5432/slotwise_scheduling?schema=public"
DATABASE_URL_NOTIFICATION="postgresql://slotwise_notification_user:slotwise_notification_password@localhost:5432/slotwise_notification?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# NATS
NATS_URL="nats://localhost:4222"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_ACCESS_TOKEN_TTL="15m"
JWT_REFRESH_TOKEN_TTL="168h"

# CORS Configuration
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=60000

# Email Configuration (SendGrid)
SENDGRID_API_KEY="your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@slotwise.com"

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_FROM_PHONE="+1234567890"

# Frontend URLs
NEXT_PUBLIC_API_URL="http://localhost:8080"
NEXT_PUBLIC_AUTH_SERVICE_URL="http://localhost:8001"
NEXT_PUBLIC_BUSINESS_SERVICE_URL="http://localhost:8003"
NEXT_PUBLIC_SCHEDULING_SERVICE_URL="http://localhost:8002"
NEXT_PUBLIC_NOTIFICATION_SERVICE_URL="http://localhost:8004"

# Service Ports
AUTH_SERVICE_PORT=8001
SCHEDULING_SERVICE_PORT=8002
BUSINESS_SERVICE_PORT=8003
NOTIFICATION_SERVICE_PORT=8004
FRONTEND_PORT=3000

# Logging
LOG_LEVEL=info

# Development Tools
NX_CLOUD_ACCESS_TOKEN="your-nx-cloud-token-for-distributed-caching"

# Security (for production)
# SNYK_TOKEN="your-snyk-token-for-security-scanning"
