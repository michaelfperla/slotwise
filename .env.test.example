# SlotWise Test Environment Configuration
# Copy this file to .env.test and update values as needed

# Database URLs for testing
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/slotwise_business_test"
AUTH_DATABASE_URL="postgresql://postgres:postgres@localhost:5432/slotwise_auth_test"
SCHEDULING_DATABASE_URL="postgresql://postgres:postgres@localhost:5432/slotwise_scheduling_test"
NOTIFICATION_DATABASE_URL="postgresql://postgres:postgres@localhost:5432/slotwise_notification_test"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# NATS Configuration
NATS_URL="nats://localhost:4222"

# Environment
NODE_ENV="test"

# JWT Configuration (for testing)
JWT_SECRET="test-secret-key-change-in-production"
JWT_EXPIRES_IN="1h"

# API Configuration
API_PORT=3001
FRONTEND_URL="http://localhost:3000"

# Logging
LOG_LEVEL="debug"

# Test-specific settings
TEST_TIMEOUT=30000
JEST_TIMEOUT=30000
