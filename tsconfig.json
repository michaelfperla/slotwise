{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@slotwise/types": ["./shared/types/src"],
      "@slotwise/utils": ["./shared/utils/src"]
    }
  },
  "include": ["shared/**/*", "services/**/*"],
  "exclude": ["node_modules", "dist", "frontend", "e2e", "**/*.spec.ts", "**/*.test.ts"]
}
