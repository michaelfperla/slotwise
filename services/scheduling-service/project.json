{
  "name": "@slotwise/scheduling-service",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "services/scheduling-service",
  "projectType": "application",
  "tags": ["scope:backend", "type:service", "platform:go"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go build -o bin/scheduling-service main.go",
        "cwd": "services/scheduling-service"
      },
      "outputs": ["{projectRoot}/bin"],
      "dependsOn": ["^build"]
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go run main.go",
        "cwd": "services/scheduling-service"
      },
      "dependsOn": ["build"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go test ./...",
        "cwd": "services/scheduling-service"
      },
      "outputs": ["{projectRoot}/coverage"],
      "configurations": {
        "passWithNoTests": {
          "command": "go test ./... || exit 0"
        }
      }
    },
    "test:integration": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go test -tags=integration ./...",
        "cwd": "services/scheduling-service"
      },
      "outputs": ["{projectRoot}/coverage"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go vet ./...",
        "cwd": "services/scheduling-service"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go fmt ./...",
        "cwd": "services/scheduling-service"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go vet ./...",
        "cwd": "services/scheduling-service"
      }
    },
    "deps:tidy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go mod tidy",
        "cwd": "services/scheduling-service"
      }
    },
    "deps:download": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go mod download",
        "cwd": "services/scheduling-service"
      }
    },
    "docker:build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -t slotwise-scheduling-service .",
        "cwd": "services/scheduling-service"
      },
      "dependsOn": ["build"]
    }
  }
}
