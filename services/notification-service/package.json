    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.1.0",
    "prisma": "^5.7.1",
    "@prisma/client": "^5.7.1",
    "nats": "^2.18.0",
    "ioredis": "^5.3.2",
    "@sendgrid/mail": "^8.1.0",
    "twilio": "^4.19.3",
    "handlebars": "^4.7.8",
    "mjml": "^4.14.1",
    "zod": "^3.22.4",
    "nanoid": "^5.0.4",
    "date-fns": "^2.30.0",
    "pino": "^8.17.2",
